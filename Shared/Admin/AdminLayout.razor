@inject NavigationManager NavigationManager

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>
<style>
    .mud-drawer-content .mud-nav-link-text{
        color:black
    }
</style>
<MudLayout Style="background-color:rgb(240,243,250);min-height:100vh">
