<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout Style="background-color:aliceblue;min-height:100vh">
<MudPaper Elevation="0">
<MudDrawer Height="100vh" @bind-Open="@open"  Elevation="0" Variant="@DrawerVariant.Mini" OpenMiniOnHover="true">
            <AdminNavMenu></AdminNavMenu>
</MudDrawer>
</MudPaper>
<MudPaper Elevation="0" Style="padding-left:80px;padding-right:30px;background-color:aliceblue;margin-bottom:20px"> 
